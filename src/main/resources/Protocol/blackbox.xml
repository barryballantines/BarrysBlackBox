<?xml version="1.0"?>

<PropertyList>
    <generic>
        <output>
            <line_separator>newline</line_separator>
            <var_separator>,</var_separator>

            <chunk>
                <name>altitude (above sea level)</name>
                <node>/position/altitude-ft</node>
                <type>float</type>
                <format>{"altitude":%03.2f</format>
            </chunk>
            
            <!-- Position -->
            
            <chunk>
                <name>latitude (decimal)</name>
                <node>/position/latitude-deg</node>
                <type>float</type>
                <format>"latitude":%.8f</format>
            </chunk>
            
             <chunk>
                <name>longitude (decimal)</name>
                <node>/position/longitude-deg</node>
                <type>float</type>
                <format>"longitude":%0.8f</format>
            </chunk>
            
            <chunk>
                <name>heading (degrees)</name>
                <node>/orientation/heading-deg</node>
                <type>float</type>
                <format>"heading":%.2f</format>
            </chunk>
            
            <chunk>
                <name>closest airport</name>
                <node>/sim/airport/closest-airport-id</node>
                <type>string</type>
                <format>"closest-airport": '%s'</format>
            </chunk>
      
            <chunk>
                <name>fuel on board</name>
                <node>/consumables/fuel/total-fuel-lbs</node>
                <type>float</type>
                <format>"fuel-lbs": %03.2f</format>
            </chunk>
      
            <chunk>
                <name>groundspeed kts</name>
                <node>/velocities/groundspeed-kt</node>
                <type>float</type>
                <format>"groundspeed": %03.2f</format>
            </chunk>
            
            <chunk>
                <name>Speed North fps</name>
                <node>/velocities/speed-north-fps</node>
                <type>float</type>
                <format>"speed-north-fps": %03.2f</format>
            </chunk>
            
            <chunk>
                <name>Speed East fps</name>
                <node>/velocities/speed-east-fps</node>
                <type>float</type>
                <format>"speed-east-fps": %03.2f</format>
            </chunk>
            
            <chunk>
                <name>Heading</name>
                <node>/orientation/heading-deg</node>
                <type>float</type>
                <format>"heading-deg" : %03.2f</format>
            </chunk>
      
            <!-- route information -->
      
            <chunk>
                <name>route departure airport</name>
                <node>/autopilot/route-manager/departure/airport</node>
                <type>string</type>
                <format>"route-departure-airport": '%s'</format>
            </chunk>
      
            <chunk>
                <name>route destination airport</name>
                <node>/autopilot/route-manager/destination/airport</node>
                <type>string</type>
                <format>"route-destination-airport": '%s'</format>
            </chunk>
      
            <chunk>
                <name>total distance</name>
                <node>/autopilot/route-manager/total-distance</node>
                <type>float</type>
                <format>"route-total-distance": %03.2f</format>
            </chunk>
      
            <chunk>
                <name>distance remaining</name>
                <node>/autopilot/route-manager/distance-remaining-nm</node>
                <type>float</type>
                <format>"route-distance-remaining": %03.2f</format>
            </chunk>
      
            <chunk>
                <name>flight time</name>
                <node>/autopilot/route-manager/flight-time</node>
                <type>float</type>
                <format>"route-flight-time": %03.2f</format>
            </chunk>
      
            <chunk>
                <name>ete</name>
                <node>/autopilot/route-manager/ete</node>
                <type>float</type>
                <format>"route-ete": %03.2f</format>
            </chunk>
            
            <!-- Landing Rate -->
            
            <chunk>
                <name>vertical speed fps</name>
                <node>/velocities/vertical-speed-fps</node>
                <type>float</type>
                <format>"vertical-speed": %03.2f</format>
            </chunk>
            
            <chunk>
                <name>wow gear 1</name>
                <node>/gear/gear/wow</node>
                <type>float</type>
                <format>"wow": [%03.2f</format>
            </chunk>
            
            <chunk>
                <name>wow gear 2</name>
                <node>/gear/gear[1]/wow</node>
                <type>float</type>
                <format> %03.2f</format>
            </chunk>
            
            <chunk>
                <name>wow gear 3</name>
                <node>/gear/gear[2]/wow</node>
                <type>float</type>
                <format>%03.2f]}</format>
            </chunk>
      
        </output>
    </generic>
</PropertyList>